{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"module": "esnext",
		"outDir": "./build",
		"target": "es6",
		"skipLibCheck": true,
		"isolatedModules": true,
		"lib": ["ESNext"]
	},
	"references": [
		{
			"path": "apps/v3"
		}
	]
}
