{
	"name": "root",
	"version": "2.73.1-1",
	"workspaces": [
		"packages/contracts-interface",
		"packages/optimism-networks",
		"packages/transaction-notifier",
		"packages/wei",
		"packages/providers",
		"packages/queries",
		"**/*"
	],
	"private": true,
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "yarn workspaces foreach --topological-dev --verbose run test",
		"build": "yarn workspaces foreach --topological-dev --verbose run build",
		"publish": "yarn workspaces foreach --topological-dev --verbose publish",
		"deps": "deps",
		"deps:fix": "deps --fix",
		"deps:mismatched": "deps-mismatched",
		"deps:circular": "deps-circular"
	},
	"devDependencies": {
		"@babel/core": "^7.11.0",
		"@babel/preset-env": "^7.13.10",
		"@babel/preset-typescript": "^7.13.0",
		"@types/jest": "^28.1.1",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"deps": "workspace:*",
		"eslint": "^7.26.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.2",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.3.0",
		"typescript": "^4.4.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,ts,tsx}": [
			"prettier --check",
			"eslint"
		]
	},
	"optionalDependencies": {
		"chokidar": "^3.5.2",
		"fsevents": "^2.3.2",
		"watchpack-chokidar2": "^2.0.1"
	},
	"packageManager": "yarn@3.2.1",
	"stableVersion": "2.73.1"
}
