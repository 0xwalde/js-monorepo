{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "prettier -c packages",
    "lint:write": "prettier -w packages",
    "test": "jest",
    "build": "for f in packages/*; do cd $f; npm run build-node; cd ../..; done"
  },
  "devDependencies": {
    "@babel/core": "7.11.0",
    "@babel/plugin-transform-runtime": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-typescript": "7.13.0",
    "@types/jest": "26.0.22",
    "@types/mocha": "8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-jest": "26.2.2",
    "babel-loader": "8.1.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "lerna": "4.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12"
  },
	"jest": {
		"transform": {
			"^.+\\.ts?$": "babel-jest"
		},
		"coverageThreshold": {
			"global": {
				"branches": 70,
				"functions": 70,
				"lines": 80,
				"statements": 80
			}
		}
	}
}
